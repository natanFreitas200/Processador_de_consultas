// Árvore de Álgebra Relacional
digraph {
	node [shape=box style=rounded]
	n1 [label="π
(c.Nome, p.Nome, ped.DataPedido)" shape=box]
	n2 [label="σ
(ped.ValorTotal > 100)" shape=box]
	n3 [label="⨝
(ped.idProduto = p.idProduto)" shape=box]
	n4 [label="⨝
(c.idCliente = ped.Cliente_idCliente)" shape=box]
	n4 -> n5
	n4 -> n6
	n3 -> n4
	n3 -> n7
	n2 -> n3
	n1 -> n2
}
